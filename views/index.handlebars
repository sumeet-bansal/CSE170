		<form id="prefsForm" role="form" method="GET" action="/submit">
			<div class="container" style="padding-top: 5%">
				<div class="row">
					<div class="col-1"></div>
					<div class="col-10">
						<h2> Create a plan:</h2>
						<h4>
							<div class="prefOption">
								dietary restrictions
								<select class="form-control" name="dietary" id="form">
									<option value="">none</option>
									<option>vegetarian</option>
									<option>vegan</option>
								</select>
							</div>
							<div class="prefOption">
								location
								<select class="form-control" name="location" multiple data-actions-box="true">
									<option>Revelle</option>
									<option>Muir</option>
									<option>Warren</option>
									<option>Sixth</option>
									<option>ERC</option>
									<option>Marshall</option>
								</select>
							</div>
							<div class="prefOption">
								number of meals
								<select class="form-control" name="meals" required>
									<option>1</option>
									<option>2</option>
									<option selected="selected">3</option>
									<option>4</option>
									<option>5</option>
								</select>
							</div>
							<div class="prefOption">
								number of calories
								<div class="form-inline">
									<input class="form-control col" type="number" placeholder="min" name="min" required>
									<input class="form-control col" type="number" placeholder="max" name="max" required>
								</div>
							</div>
							<div class="row prefOption" style="padding-top: 8%;">
								<div class="col-4">
									<input class="form-control text-center" type="number" placeholder="total" name="price">
								</div>
								dining dollars
							</div>
						</h4>
					</div>
				</div>
			</div>
			<br>
			<div class="container text-center">
				<a href="results">
					<input type="submit" id="submitBtn" class="btn btn-lg btn-outline-secondary" onclick="ga('create', 'UA-115344547-1', 'auto');
